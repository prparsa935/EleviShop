{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug TypeScript Express",
      "runtimeExecutable": "nodemon",
      "runtimeArgs": [
        "--exec",
        "ts-node"
      ],
      "program": "f:/EleVi shop/EleviShop/backend/server.ts",
      "restart": true,
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "port": 9229, // Default port for --inspect
      "env": {
        "NODE_OPTIONS": "--inspect"
      }
    }
  ]
}